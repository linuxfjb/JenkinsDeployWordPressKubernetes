        command: 'sleep', 
        args: '30d'
        ),
  ]) {

    node(POD_LABEL) {
        stage('Get a Maven project') {
            git url: 'https://github.com/spring-projects/spring-petclinic.git', branch: 'main'
            container('maven') {
                stage('Build a Maven project') {
                    sh '''
                    #echo "maven build"
                    #cd spring-petclinic
                    #./mvnw package
                    #java -jar target/*.jar
                    sleep 6
                    '''
                    echo "did i keep going or am i waiting?"
                }
            }
        }
    }
}
